@model Agreement.Models.AgreementRecord
@{
    ViewData["Title"] = "Thank You";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body text-center">
            <h1 class="text-success mb-4">Thank You!</h1>
            <i class="fas fa-check-circle fa-5x text-success mb-4"></i>

            <p class="lead">Your agreement has been successfully submitted.</p>
            <p>Reference Number: <strong>@Model.Id</strong></p>

            @if (!string.IsNullOrEmpty(Model.SignatureData))
            {
                <div class="mt-4">
                    <h5>Your Signature:</h5>
                    <img src="@Model.SignatureData" alt="Your Signature" class="img-fluid border p-2" style="max-width: 300px;">
                </div>
            }

            <div class="mt-4 d-flex flex-column gap-2">
                <a href="@Url.Action("DownloadAgreementPdf")"
                   class="btn btn-primary btn-lg">
                    <i class="fas fa-file-pdf me-2"></i> Download Agreement PDF
                </a>

                @if (!string.IsNullOrEmpty(Model.hpcsafileStoredName))
                {
                    <a href="@Url.Action("DownloadFile", new { storedName = Model.hpcsafileStoredName })"
                       class="btn btn-secondary">
                        <i class="fas fa-file-alt me-2"></i> Download HPCSA Document
                    </a>
                }

                @if (!string.IsNullOrEmpty(Model.hpcsafileStoredName))
                {
                    <a href="@Url.Action("DownloadFile", new { storedName = Model.bohffileStoredname })"
                       class="btn btn-secondary">
                        <i class="fas fa-file-alt me-2"></i> Download Board of Health Funders certificate.
                    </a>
                }

                @if (!string.IsNullOrEmpty(Model.ppiifileStoredName))
                {
                    <a href="@Url.Action("DownloadFile", new { storedName = Model.ppiifileStoredName })"
                       class="btn btn-secondary">
                        <i class="fas fa-file-alt me-2"></i> Download Proof of Professional Indemnity.
                    </a>
                }

                @if (!string.IsNullOrEmpty(Model.idfileStoredName))
                {
                    <a href="@Url.Action("DownloadFile", new { storedName = Model.idfileStoredName })"
                       class="btn btn-secondary">
                        <i class="fas fa-file-alt me-2"></i> Download Identity document.
                    </a>
                }

                @if (!string.IsNullOrEmpty(Model.qsfileStoredName))
                {
                    <a href="@Url.Action("DownloadFile", new { storedName = Model.qsfileStoredName })"
                       class="btn btn-secondary">
                        <i class="fas fa-file-alt me-2"></i> Download All relevant qualifications.
                    </a>
                }

                @if (!string.IsNullOrEmpty(Model.emerfileStoredName))
                {
                    <a href="@Url.Action("DownloadFile", new { storedName = Model.emerfileStoredName })"
                       class="btn btn-secondary">
                        <i class="fas fa-file-alt me-2"></i> Download specific discipline.
                    </a>
                }

                <a href="/" class="btn btn-outline-secondary mt-3">
                    <i class="fas fa-home me-2"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            max-width: 600px;
            margin: 0 auto;
            border: none;
            border-radius: 10px;
        }

        .btn-lg {
            padding: 0.5rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
}